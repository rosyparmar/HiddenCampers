<% include ../styling/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit your Campsite</h1>
		<div style="width:30%; margin: 30px auto;">
			<form action="/campsites/<%= campsite._id%>/edit" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" value="<%= campsite.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" value="<%= campsite.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="location" value="<%= campsite.location %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="description" value="<%= campsite.description %>" >
				</div>
				<div class="form-group">
					<button class="btn btn-success btn-block">Update</button>
				</div>
			</form>
			<!-- <a href="/userProfile">Go back</a> -->
		</div>
	</div>
</div>


<% include ../styling/footer %>
